<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edwin.calculadora.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/Area" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:paddingTop="9dp"
        android:layout_marginBottom="10dp"
        android:background="#cfd4dc">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp">

            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/ret"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/p2"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/mas"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp">

            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/siete"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/ocho"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/nueve"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/menos"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp">

            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/cuatro"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/cinco"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/seis"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/por"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp">

            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/uno"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/dos"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/tres"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/div"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="0dp">

            <ImageButton
                android:background="@drawable/btn_circle"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />
            <ImageButton
                android:background="@drawable/btn_circle"
                android:src="@drawable/opc"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
